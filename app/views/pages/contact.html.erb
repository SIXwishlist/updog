<div class='wrapper'>
  <h2>Contact</h2>
  <form method='post'>
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
    <label for='email'>Email Address</label>
    <input required id='email' name='email' type='email' placeholder="jane@doe.com" value='<%= params[:email] %>'>
    <label for='message'>Your Message</label>
    <textarea id='message' name='content'><%= params[:content] %></textarea>
    <button class='btn-create'>Submit</button>
  </form>
</div>
